# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model preferences
DEFAULT_MODEL=claude-3-5-sonnet-20241022
FAST_MODEL=claude-3-haiku-20240307

# API Configuration
MAX_TOKENS=4000
TEMPERATURE=0.7
REQUEST_TIMEOUT=30000

# Optional: Rate limiting
REQUESTS_PER_MINUTE=60

# GitHub Integration Configuration
# Required for @agent delegation to coding agents and repository operations
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=your_github_username_or_org
GITHUB_REPO=your_default_repository_name

# GitHub App Configuration (Alternative to Personal Access Token)
# Use if you prefer GitHub App authentication over PAT
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY=your_github_app_private_key_base64
GITHUB_APP_INSTALLATION_ID=your_github_app_installation_id

# Agent Delegation Configuration
# Default branch for creating PRs and issues
DEFAULT_BRANCH=main
# Agent behavior settings
AGENT_AUTO_CREATE_BRANCH=true
AGENT_AUTO_CREATE_PR=false
AGENT_REQUIRE_APPROVAL=true

# Optional: Additional AI Services for Agent Delegation
# OpenAI API (for GPT-4 coding agents as backup/alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Code Analysis Services
# For enhanced code understanding and suggestions
CODEIUM_API_KEY=your_codeium_api_key_here
REQUESTS_PER_DAY=1000

# Slack Integration Configuration
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_CLIENT_ID=your-client-id-here
SLACK_CLIENT_SECRET=your-client-secret-here

# App Configuration
APP_BASE_URL=http://localhost:5174